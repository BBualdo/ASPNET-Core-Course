@using ViewsExample.Models;
@{
    string appTitle = "ASP.NET Core Web Application";
    Person me = new Person("Sebastian", new DateTime(2000, 5, 23), new List<string> {"Coding", "Playing games", "Music making"});
    double age = Math.Round(((DateTime.Now - me.DateOfBirth!).Value.TotalDays) / 365.25);
}

<!DOCTYPE html>
<html>
    <head>
        <title>@appTitle</title>
        <meta charset="utf-8" />
    </head>
    <body>
        <h1>This is my first View Page.</h1>
        <p>I'm currently learning concept of Views.</p>
        <p>This is the last element of <span>MVC</span>.</p>
        <div>
            <h3>Here is a Person object:</h3>
            <h2>Name: @me.Name</h2>
        @switch (age)
        {
            case < 13:
                <h4>You are kiddos.</h4>
                break;
            case < 18:
                <h4>You are teen.</h4>
                break;
            case < 65:
                <h4>You are adult.</h4>
                break;
            default:
                <h4>You are senior.</h4>
                break;
        }

        <h3>Your hobbies are:</h3>
        <ul>
            @for (int i = 0; i < 2; i++)
            {
                // static text can be written like this:
                @: I
                // or
                <text>like</text>

                // Razor Comment:
                @*this is a comment*@
                string hobby = me.Hobbies[i];

                <li>@hobby</li>
            }
        </ul>
        </div>
    </body>
</html>
