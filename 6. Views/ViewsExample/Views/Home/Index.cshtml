@using ViewsExample.Models;

@{
    string GetAge(Person person)
    {
        if (person.DateOfBirth.HasValue)
        {
            double age = Math.Round((DateTime.Now - person.DateOfBirth).Value.TotalDays / 365.25);
            return $"{person.Name} is {age} years old.";
        }
        return $"{person.Name}'s date of birth is unknown.";
    }
}

<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.appTitle</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/StyleSheet.css" />
    </head>
    <body>
        <div class="heading">
        <h1>This is my first View Page.</h1>
        <p>I'm currently learning concept of Views.</p>
        <p>This is the last element of <span>MVC</span>.</p>
        </div>
        <div class="people">
            <h2>Ludziki:</h2>
       
        @foreach (Person person in ViewBag.people)
        {
            <h4>@GetAge(person)</h4>
        }
        </div>
    </body>
</html>
